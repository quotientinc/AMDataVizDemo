@{
    ViewData["Title"] = "Materials";
}

<!-- Start Breadcrumbbar -->
<div class="breadcrumbbar">
    <div class="row align-items-center">
        <div class="col-md-8 col-lg-8">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <div class="breadcrumb-list">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="~/Home/Machines">@ViewData["Title"]</a></li>
                </ol>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="widgetbar">
                <button class="btn btn-primary"><i class="ri-refresh-line mr-2"></i>Refresh</button>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbbar -->
<!-- Start Contentbar -->
<div class="contentbar">

    <p>Datatable of machines</p>

    <div class="card">
        <!-- buttons for export + search button: not mapped-->
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="dt-buttons btn-group">
                    <a class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="datatable-buttons" href="#"><span>Copy</span></a>
                    <a class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="datatable-buttons" href="#"><span>CSV</span></a>
                    <a class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="datatable-buttons" href="#"><span>Excel</span></a>
                    <a class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="datatable-buttons" href="#"><span>PDF</span></a>
                    <a class="btn btn-secondary buttons-print" tabindex="0" aria-controls="datatable-buttons" href="#"><span>Print</span></a>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div id="datatable-buttons_filter" class="dataTables_filter">
                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="datatable-buttons"></label>
                </div>
            </div>
        </div>
        <!-- Machine table  -->
        <!-- following: senvol-machines.json -->

        <table id="MachineDataTable" class="table table-striped dataTable no-footer dtr-inline">
            <tr>
                <th>Machine Model</th>
                <th>Machine Manufacturer</th>
                <th>AM Process ASTM</th>
                <th>Ceramic</th>
                <th>Composite</th>
                <th>Metal</th>
                <th>Polymer</th>
                <th>Sand</th>
                <th>Wax</th>
                <th>General Material Type</th>
                <th>Similar Material Type</th>
            </tr>
        </table>
    </div>


</div>
<!-- End Contentbar -->
