@{
    ViewData["Title"] = "Production Data Charts";
}

<!-- Start Breadcrumbbar -->
<div class="breadcrumbbar">
    <div class="row align-items-center">
        <div class="col-md-8 col-lg-8">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <div class="breadcrumb-list">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="">Charts</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="~/Home/ProductionCharts">@ViewData["Title"]</a></li>
                </ol>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="widgetbar">
                <button class="btn btn-primary"><i class="ri-refresh-line mr-2"></i>Refresh</button>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbbar -->
<!-- Start Contentbar -->
<div class="contentbar">
    <p>Refer to the <em>forecast</em> page on <a href="https://lee486.shinyapps.io/AMNOW-ForecastingAnalytics/">Su-Ah's R Shiny mockup</a></p>

    <p>
        Probably want to merge 2 things here: Su-Ah's concept for the production charting at the top of the forecast page,
        and <a href="https://www.myamnow.com:444/Analytics">the 2 charts on the AMIP site, monthly production and monthly production by process</a>.
    </p>


    <!-- Tab links -->
    <div class="tab">
        <button class="tablinks" data-content="line-chart-tabcontent">Line Chart</button>
        <button class="tablinks" data-content="bar-plot-tabcontent">Bar Chart</button>
        <button class="tablinks" data-content="single-line-chart-tabcontent">Singular Company View</button>
    </div>

    <!-- Tab content -->
    <div id="line-chart-tabcontent" class="tabcontent hidden">
        <div class="box">
            <h3>Line Chart</h3>
            <div class="container-fluid">
                <div id="linechart" class="chart"></div>
            </div>
        </div>
    </div>

    <div id="bar-plot-tabcontent" class="tabcontent hidden">
        <div class="box">
            <h3>Bar Chart</h3>
            <div class="container-fluid">
                <div id="columnchart" class="chart"></div>
            </div>
        </div>
    </div>

    <div id="single-line-chart-tabcontent" class="tabcontent hidden">
        <div class="box">
            <h3>Line Chart for Single Company</h3>
            <select id="CompLineSelect" name="CompList">
                <option value="none" selected disabled hidden> Select a Company </option>
            </select>

            <div class="container-fluid">
                <div id="companyLine" class="chart"></div>
            </div>
        </div>
    </div>

</div>
<!-- End Contentbar -->

