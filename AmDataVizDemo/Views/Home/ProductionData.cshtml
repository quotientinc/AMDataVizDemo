@{
    ViewData["Title"] = "Production Data";
}

<!-- Start Breadcrumbbar -->
<div class="breadcrumbbar">
    <div class="row align-items-center">
        <div class="col-md-8 col-lg-8">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <div class="breadcrumb-list">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="~/Home/ProductionData">@ViewData["Title"]</a></li>
                </ol>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="widgetbar">
                <button class="btn btn-primary"><i class="ri-refresh-line mr-2"></i>Refresh</button>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbbar -->
<!-- Start Contentbar -->
<div class="contentbar">
    <!-- Extra Information
    <p>Refer to the <em>Dashboard</em> page on <a href="https://lee486.shinyapps.io/AMNOW-ForecastingAnalytics/">Su-Ah's R Shiny mockup</a></p>

    <p>Provide a data table of production data here- see the production datatable at the bottom of the dashboard page.</p>
        -->
    <!-- Production Data summary  -->
    <div class="box">
        <div class="row">
            <div class="col-sm-4 infocol">
                <div class="infobox">
                    <i class="fas fa-clipboard"></i>
                </div>
                <div class="infobox">
                    <p class="infoP">Total jobs</p>
                    <h3>2,850</h3>
                </div>
            </div>
            <div class="col-sm-4 infocol">
                <div class="infobox">
                    <i class="fas fa-chart-pie">
                    </i>
                </div>
                <div class="infobox">
                    <p class="infoP">Total parts</p>
                    <h3>4,500</h3>
                </div>
            </div>
            <div class="col-sm-4 infocol">
                <div class="infobox">
                    <i class="fas fa-truck">
                    </i>
                </div>
                <div class="infobox">
                    <p class="infoP">Total Suppliers</p>
                    <h3>484</h3>
                </div>
            </div>
        </div>
    </div>

        <!-- Production Data table  -->
    <div class="box">
        <div class="table-responsive">
            <table id="ProductionDataTable" class="table table-striped dataTable no-footer dtr-inline">
                <tr>
                    <th>Job ID</th>
                    <th>Job Name</th>
                    <th>Supplier Name</th>
                    <th>Material</th>
                    <th>Process</th>
                    <th>Kpi Name</th>
                    <th>Kpi Value</th>
                    <th>Report Date</th>
                </tr>
            </table>
            </div>
        </div>


    </div>
    <!-- End Contentbar -->
